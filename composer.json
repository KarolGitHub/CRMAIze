{
  "name": "crmaize/crmaize",
  "description": "AI-powered customer retention and engagement dashboard for e-commerce",
  "type": "project",
  "require": {
    "php": ">=7.4",
    "twig/twig": "^3.0",
    "vlucas/phpdotenv": "^5.0",
    "symfony/http-foundation": "^6.0",
    "symfony/routing": "^6.0",
    "symfony/var-dumper": "^6.0",
    "phpmailer/phpmailer": "^6.8",
    "tecnickcom/tcpdf": "^6.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "CRMAIze\\": "src/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "mkdir -p data",
      "mkdir -p public/assets/css",
      "mkdir -p public/assets/js",
      "mkdir -p templates/emails",
      "mkdir -p cache"
    ],
    "dev": [
      "php -S localhost:8000 -t public"
    ],
    "serve": [
      "php -S localhost:8000 -t public"
    ],
    "install-dev": [
      "php scripts/install.php",
      "php scripts/setup_users.php",
      "php scripts/import_data.php"
    ],
    "fresh": [
      "@install-dev"
    ],
    "test": [
      "php scripts/import_data.php"
    ],
    "schedule": [
      "php scripts/process_scheduled_campaigns.php"
    ]
  }
}
