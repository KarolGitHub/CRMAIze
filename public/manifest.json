  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+crmaize",
      "url": "/?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/data-import-export",
      "accept": {
        "text/csv": [".csv"]
      },
      "launch_type": "single-client"
    }
  ]
}